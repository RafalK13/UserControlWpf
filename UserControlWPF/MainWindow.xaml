<Window x:Class="UserControlWPF.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:UserControlWPF"
        xmlns:controls="clr-namespace:WpfControlLibraryRaf;assembly=WpfControlLibraryRaf"
        mc:Ignorable="d"
        Title="MainWindow" Height="350" Width="525">
    <Window.Resources>
        <local:DaneRaf x:Key="dane"/>
    </Window.Resources>

    <Window.DataContext>
        <local:DaneRaf/>
    </Window.DataContext>
    <StackPanel>
        <controls:DataGridRaf dataGridSource="{Binding Source={StaticResource dane}, Path=dtSourceRaf}"
                              height="30"
                              colName="name"
                              />

    </StackPanel>
</Window>
