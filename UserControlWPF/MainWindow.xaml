                <DataGridTextColumn Binding="{Binding name}" Width="*"/>
                <DataGridTextColumn Binding="{Binding city}" Width="*"/>
                <DataGridTextColumn Binding="{Binding age}" Width="*"/>
            </DataGrid.Columns>
        </DataGrid>

        <controls:DataGridRaf   Name="controlRaf" 
                                dataGridSource="{Binding Path=DataContext.dtSourceRaf, ElementName=win}"
                                selectedValueRaf="{Binding Path=Text,  ElementName=numer, Converter={StaticResource convStrToInt}, UpdateSourceTrigger=PropertyChanged, Mode=TwoWay}"
                                selectedValuePathRaf="id"
                                colName="name" Height="321" 
                                />

