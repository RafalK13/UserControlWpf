<Window x:Class="UserControlWPF.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:UserControlWPF"
        xmlns:controls="clr-namespace:WpfControlLibraryRaf;assembly=WpfControlLibraryRaf"
        mc:Ignorable="d"
        x:Name="win"
        Title="MainWindow" Height="500" Width="525">

    <Window.DataContext>
        <local:DaneRaf/>
    </Window.DataContext>

    <Grid HorizontalAlignment="Stretch">
        <StackPanel Orientation="Horizontal"  HorizontalAlignment="Stretch" VerticalAlignment="Top" Panel.ZIndex="13">
            <Label x:Name="label" Content="Rafałek"/>
            <controls:DataGridRaf
                              Name="moj"
                              dataGridSource="{Binding ElementName=win, Path=DataContext.dtSourceRaf}"
                              Width="400"
                              colName="name"
                              height="30"
                             />
        </StackPanel>

        <StackPanel Margin="0,50">
            <TextBox    Height="50" Text="{Binding ElementName=label, Path=Content, Mode=OneWay}" />
            <Button     
                    Background="Gold"
                    Height="50"
                   />
        </StackPanel>
    </Grid>

</Window>
