<Window x:Class="UserControlWPF.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:UserControlWPF"
        xmlns:controls="clr-namespace:WpfControlLibraryRaf;assembly=WpfControlLibraryRaf"
        mc:Ignorable="d"
        x:Name="win"
        Title="MainWindow" Height="350" Width="525">
   
    <Window.DataContext>
        <local:DaneRaf/>
    </Window.DataContext>
    <StackPanel >
        <controls:DataGridRaf dataGridSource="{Binding ElementName=win, Path=DataContext.dtSourceRaf}"
                              colName="name"
                              height="30"/>
    </StackPanel>
</Window>
